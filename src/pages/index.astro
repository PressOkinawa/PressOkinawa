---
import BaseLayout from "../layouts/BaseLayout.astro";
import Hero from "../components/Hero.astro";
import ServiceCard from "../components/ServiceCard.astro";
import FeatureBand from "../components/FeatureBand.astro";
---
<BaseLayout title="ホーム">
 
  <div class="hero-bg">

  </div>

  <section class="section">
    <div class="container">
      <h2>主要サービス</h2>
      <p class="lead">何かテキスト</p>
      <div class="grid">
        <ServiceCard title="名刺" text="説明を書く" />
        <ServiceCard title="チラシ・ポスター" text="説明を書く" />
      </div>
    </div>
  </section>

  <FeatureBand />

  <section class="section">
    <div class="container" style="display:flex;gap:14px;flex-wrap:wrap;align-items:center;justify-content:space-between">
      <div>
        <h2>相見積り歓迎。まずはご相談ください。</h2>
        <p class="lead">データの作り方が不安でも大丈夫。入稿テンプレートや無料チェックをご用意しています。</p>
      </div>
      <div>
        <a class="btn primary" href="/contact">見積・相談する</a>
      </div>
    </div>
  </section>
</BaseLayout>

<style>
  /* ===== Hero background (responsive) ===== */
  .hero-bg {
    background-image: url("/images/puresug.gif");
    background-repeat: no-repeat;
    background-position: center top;  /* 重要部分が上なら top を優先 */
    background-size: cover;           /* 余白なしでカバー（多少トリミング） */
    width: 100%;
    height: 80vh;                     /* 画面に対して8割の高さ */
    min-height: 600px;                /* PCでしっかり見える最低値 */
    max-height: 900px;                /* 高すぎ防止（必要なら調整） */
  }

  /* Hero 内テキスト配置 */
.hero-bg {
  background-image: url("/images/puresug.gif");
  background-repeat: no-repeat;
  background-position: center top;
  background-size: cover;
  width: 100%;
  height: 90vh;         /* デフォは90%画面高 */
  min-height: 750px;
  max-height: 1100px;
  display: grid;
  place-items: center;
  text-align: center;
}


  /* ====== Breakpoints ====== */

  /* タブレット：少し低く */
  @media (max-width: 960px) {
    .hero-bg {
      height: 65vh;
      min-height: 480px;
      background-position: center top;
    }
  }

  /* スマホ：切れすぎ防止。画像全体を見せたいので contain に切替 */
  @media (max-width: 640px) {
    .hero-bg {
      background-size: contain;    /* 余白は出るが全体が見える */
      background-position: center top;
      background-color: #fff;      /* 余白の色。必要に応じて変更 */
      height: auto;                /* 画像比率に合わせる */
      min-height: 380px;           /* テキストが乗る最低高さ */
      max-height: none;
    }
    .hero-bg :global(.hero) {
      align-items: center;
      text-align: center;
      padding: 16px 14px;
    }
  }

  /* さらに縦長の画面（端末回転や超縦長）では contain を優先 */
  @media (max-aspect-ratio: 3/4) {
    .hero-bg {
      background-size: contain;
      background-position: center top;
    }
  }

  
</style>







